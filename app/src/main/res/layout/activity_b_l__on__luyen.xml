<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/cauhoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Em hãy chọn nhận xét đúng nhất trong các nhận xét sau đây về Cách mạng tháng Tám năm 1945."
        android:textAllCaps="false"

        android:textSize="15sp"
        />

    <Button
        android:id="@+id/btnA"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Cách mạng tháng Tám thắng lợi nhanh chóng và nhiều thương vong."
        android:textSize="15sp"
        android:layout_below="@id/cauhoi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="60dp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btnB"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Cách mạng tháng Tám thắng lợi chậm nên nhiều thương vong."
        android:textSize="15sp"
        android:layout_below="@id/btnA"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btnC"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Cách mạng tháng Tám thắng lợi nhanh chóng và ít đổ máu."
        android:textSize="15sp"
        android:layout_below="@id/btnB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:textAllCaps="false"
    />

    <Button
        android:id="@+id/btnD"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Cách mạng tháng Tám thắng lợi chậm nên ít đổ máu."
        android:textSize="15sp"
        android:layout_below="@id/btnC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:textAllCaps="false"
    />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="00:38:46"
        android:textAllCaps="false"

        android:textSize="20sp"
        />



</RelativeLayout>