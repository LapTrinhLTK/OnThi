<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/gtchon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="hãy chọn môn ôn luyện"
        android:textAllCaps="true"

        android:textSize="25dp"
        />

    <Button
        android:id="@+id/return2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Quay lại"
        android:textAllCaps="false"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnLy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vật lý"
        android:textSize="20sp"
        android:layout_below="@id/gtchon2"
        android:layout_marginTop="45dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="40dp"
        android:paddingRight="35dp"
        android:paddingLeft="35dp"
        />

    <Button
        android:id="@+id/btnSu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lịch sử"
        android:textSize="20sp"
        android:layout_below="@id/gtchon2"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@id/btnLy"
        android:paddingRight="35dp"
        android:paddingLeft="35dp"

        />

    <Button
        android:id="@+id/btnHoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hóa học"
        android:textSize="20sp"
        android:layout_below="@id/btnLy"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="40dp"
        android:paddingRight="25dp"
        android:paddingLeft="20dp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/btnDia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="địa lý"
        android:textSize="20sp"
        android:layout_below="@id/btnSu"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/btnHoa"
        android:paddingRight="40dp"
        android:paddingLeft="45dp"

        />

    <Button
        android:id="@+id/btnSinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sinh học"
        android:textSize="20sp"
        android:layout_below="@id/btnHoa"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="40dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"

        />

    <Button
        android:id="@+id/btnGD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GDCD"
        android:textSize="20sp"
        android:layout_below="@id/btnDia"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/btnSinh"
        android:paddingRight="45dp"
        android:paddingLeft="45dp"

        />

    <Button
        android:id="@+id/btnAnh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anh Văn"
        android:textSize="20sp"
        android:layout_below="@id/btnGD"
        android:layout_marginTop="20dp"
        android:paddingRight="30dp"
        android:paddingLeft="25dp"
        android:layout_centerHorizontal="true"

        />




</RelativeLayout>