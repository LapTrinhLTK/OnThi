<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAD290"
    >

    <TextView
        android:id="@+id/gtchon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="hãy chọn môn ôn luyện"
        android:textAllCaps="true"

        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <Button
        android:id="@+id/return2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Quay lại"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:background="#ffffff"
        />

    <Button
        android:id="@+id/btnLy"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/vatly"
        android:layout_below="@id/gtchon2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="15dp"
        />

    <Button
        android:id="@+id/btnSu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text=""
        android:textSize="20sp"
        android:layout_below="@id/gtchon2"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/btnLy"
        android:paddingRight="35dp"
        android:paddingLeft="35dp"
        android:background="@drawable/lichsu"
        />

    <Button
        android:id="@+id/btnHoa"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text=""
        android:textSize="20sp"
        android:layout_below="@id/btnLy"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="100dp"
        android:paddingRight="25dp"
        android:paddingLeft="20dp"
        android:gravity="center"
        android:background="@drawable/hoahoc"
        />

    <Button
        android:id="@+id/btnDia"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text=""
        android:textSize="20sp"
        android:layout_below="@id/btnSu"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/btnHoa"
        android:paddingRight="40dp"
        android:paddingLeft="45dp"
        android:background="@drawable/dialy"
        />

    <Button
        android:id="@+id/btnSinh"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text=""
        android:textSize="20sp"
        android:layout_below="@id/btnHoa"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="100dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/sinhhoc"
        />

    <Button
        android:id="@+id/btnGD"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text=""
        android:textSize="20sp"
        android:layout_below="@id/btnDia"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/btnSinh"
        android:paddingRight="45dp"
        android:paddingLeft="45dp"
        android:background="@drawable/gdcd"
        />

    <Button
        android:id="@+id/btnAnh"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text=""
        android:textSize="20sp"
        android:layout_below="@id/btnGD"
        android:layout_marginTop="20dp"
        android:paddingRight="30dp"
        android:paddingLeft="25dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/anhvan"
        />




</RelativeLayout>